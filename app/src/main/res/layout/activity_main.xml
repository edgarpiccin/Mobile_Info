<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/white"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="simpress.mobileinfo.MainActivity"
    android:transitionGroup="false">

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="fill_parent"
        android:layout_height="143dp"
        android:background="@drawable/toposearch1"
        android:orientation="horizontal"
>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Simpress Mobile Info"
            android:id="@+id/textView8"
            android:paddingLeft="125dp"
            android:paddingTop="40dp"
            android:textColor="#ffffff"
            android:layout_below="@+id/imeiString"
            android:textSize="@dimen/abc_text_size_menu_material" />
    </LinearLayout>

    <TextView
        android:id="@+id/imeiString"
        android:layout_width="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content"
        android:text="imei"
        android:layout_above="@+id/matriculaString"
        android:layout_toEndOf="@+id/labelImei" />
    <TextView
        android:id="@+id/nomeString"
        android:text="nome"
        android:layout_width="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/matriculaString"
        android:layout_alignStart="@+id/imeiString" />
    <TextView
        android:id="@+id/matriculaString"
        android:text="matricula"
        android:layout_width="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="4dp"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/labelMatricula"
        android:layout_toEndOf="@+id/labelMatricula" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="MatrÃ­cula: "
        android:id="@+id/labelMatricula"
        android:layout_below="@+id/labelImei"
        android:layout_alignEnd="@+id/labelNome" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Colaborador: "
        android:id="@+id/labelNome"
        android:layout_below="@+id/labelMatricula"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="4dp"
        android:paddingLeft="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="IMEI: "
        android:id="@+id/labelImei"
        android:layout_gravity="bottom"
        android:layout_below="@+id/linear"
        android:layout_toStartOf="@+id/matriculaString" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Suporte TI Telefonia: (11) 3238-9473"
        android:id="@+id/textView"
        android:layout_above="@+id/textView2"
        android:layout_alignParentEnd="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="ti_telefonia@simpress.com.br"
        android:id="@+id/textView2"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
